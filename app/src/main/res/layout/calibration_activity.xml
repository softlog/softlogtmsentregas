<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/calibration_threshold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" />

    <!--
    Big text for status: Moving, Stationary
    TextView with current threshold ... need to push this into an Application global setting
    Buttons for threshold up/down ... tens place granularity
    -->
    <TextView
        android:id="@+id/calibration_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        android:text="Stationary"
        android:textSize="12dp" />

</RelativeLayout>